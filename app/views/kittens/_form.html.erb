<%= form_with model: kitten do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% kitten.errors.full_messages_for(:name).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
    <% kitten.errors.full_messages_for(:age).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :cuteness %>
    <%= form.text_field :cuteness %>
    <% kitten.errors.full_messages_for(:cuteness).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :softness %>
    <%= form.text_field :softness %>
    <% kitten.errors.full_messages_for(:softness).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>